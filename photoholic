const express = require('express');
const path = require('path');
const fs = require('fs');

const app = express();
const PORT = 3000;

// Serve images statically
app.use('/images', express.static(path.join(__dirname, 'images')));

app.get('/', (req, res) => {
  const html = `
  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Nature & Universe Gallery</title>
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        background-color: #000;
        color: #fff;
        text-align: center;
      }
      header {
        padding: 40px 20px 10px;
      }
      header h1 {
        font-size: 3em;
        margin: 0;
      }
      header p {
        color: #ccc;
        margin-top: 10px;
        font-size: 1.2em;
      }
      #gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 10px;
        padding: 20px;
        max-width: 1400px;
        margin: auto;
      }
      #gallery img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
      }
      footer {
        padding: 20px;
        color: #999;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Nature & Universe</h1>
      <p>A journey through Earth's beauty and the cosmos</p>
    </header>
    <main>
      <div id="gallery">
        ${[...Array(10).keys()].map(i => `<img src="/images/image${i + 1}.jpg" alt="Nature ${i + 1}">`).join('')}
      </div>
    </main>
    <footer>
      <p>&copy; 2025 Nature & Universe Photography</p>
    </footer>
  </body>
  </html>
  `;
  res.send(html);
});

app.listen(PORT, () => {
  console.log(`ðŸ“¸ Site running at http://localhost:${PORT}`);
});
